---
type Props = {
  title: string
  iframeUrl: string
}
const { props } = Astro

const iframeClass = "max-w-full w-screen aspect-square sm:aspect-video sm:px-4"
---

{
  import.meta.env.DEV ? (
    <div class={`${iframeClass} skeleton`} />
  ) : (
    <iframe
      title={props.title}
      src={props.iframeUrl}
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen
      class={iframeClass}
    />
  )
}
